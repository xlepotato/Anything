@model List<Currency>
@{
    Layout = "/Views/Shared/HeaderWithButtons.cshtml";
}
<link href="~/Assets/Css/stylesheet.css" rel="stylesheet" />

<div class="container">
    <div class="row" id="outerContainer">
        @*currency conversion section*@

        <div class="col-xs-2"></div>

        <div class="row col-xs-8">
            <!--Left Container-->
            <div class="currencyInfoContainer form-group col-xs-4 col-md-4" id="leftContainer">
                <div class="drawBorder">
                    <input class="currencyInputTF" id="tbExchangeFrom" type="number" min="0.00" max="9999" value="1.00">
                    <select class="form-control exchangeDropdown btn dropdown-toggle" id="selExchangeFrom">
                        @foreach (var x in Model)
                        {
                            <option>@x</option>
                        }
                    </select>
                </div>
                <label for="tbExchangeFrom" class="col-xs-12 boxLabel">You Have</label>
            </div>
            <!--Mid Container-->
            <div class="currencyInfoContainer form-group col-xs-4" id="midContainer">
                <img src="~/Assets/Images/exchangeIcon.png" id="exchangeIcon" />
            </div>
            <!--Right Container-->
            <div class="currencyInfoContainer form-group col-xs-4" id="rightContainer" ;">
                <div class="drawBorder">
                    <input class="currencyInputTF" id="tbExchangeTo" type="number" min="0.00" max="9999" value="1.00">
                    <select class="form-control exchangeDropdown" id="selExchangeTo">
                        @foreach (var x in Model)
                        {
                            <option>@x</option>
                        }
                    </select>
                </div>
                <label for="tbExchangeTo" class="col-xs-12 boxLabel">You Get</label>
            </div>
        </div>
        <div class="col-xs-2"></div>
    </div>
    <div class="row">
        <div class="col-xs-2 col-md-2"></div>
        <div class="col-xs-8 col-md-8">
            <div class="putCenter">Market Rate: <label id="lblResult">1.00</label></div>
        </div>
        <div class="col-xs-2 col-md-2"></div>
    </div>
</div> @*end container*@


<div class="form-group">
    <input type="text" class="form-control" id="tbExchangeFrom" value="1">
</div>
<div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" id="selExchangeFrom">
        @foreach (var x in Model)
        {
            <option>@x.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <input type="text" class="form-control" id="tbExchangeTo" value="1">
</div>
<div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" id="selExchangeTo">
        @foreach (var x in Model)
        {
            <option>@x.Name</option>
        }
    </select>
</div>
Market Rate:<label id="lblResult">1</label>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row" style="margin:0px;padding:0px;">
                <div class="col-md-5" style="font-size:20px;">
                    Search: <input type="text" style="width:80%; display:inline;margin:0px;padding:0px;" class="form-control" id="tbSearch">
                </div>
            </div>
            <div class="row">
                <table class="table table-striped">
                    <tbody id="tbMoneyChanger">
                        <tr id="trMoneyChanger">
                            <td>
                                {{Name}}<br />
                                {{Location}}
                            </td>
                            <td>{{Rate}}</td>
                            <td><button type="button" class="btn btn-default" id="btnDetails">View Details</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
