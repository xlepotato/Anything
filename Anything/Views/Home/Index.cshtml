@model List<Currency>
@{
    Layout = "/Views/Shared/HeaderWithButtons.cshtml";
}
<link href="~/Assets/Css/stylesheet.css" rel="stylesheet" />

<div class="container">
    <div class="row">
        @*currency conversion section*@
        <div class="col-sm-6">
            <div class="card" id="card1">
                <div class="card-body">
                    <input class="w3-input" type="text">
                </div>
            </div>
        </div>
        <div class="col-sm-6">
            <div class="card" id="card2">
                <div class="card-body">
                    <h5 class="card-title">Special title treatment</h5>
                    <p class="card-text">It's a broader card with text below as a natural lead-in to extra content. This content is a little longer.</p>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="form-group">
    <input type="text" class="form-control" id="tbExchangeFrom" value="1">
</div>
<div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" id="selExchangeFrom">
        @foreach (var x in Model)
        {
            <option>@x.Name</option>
        }
    </select>
</div>
<div class="form-group">
    <input type="text" class="form-control" id="tbExchangeTo" value="1">
</div>
<div class="form-group">
    <label for="sel1">Select list:</label>
    <select class="form-control" id="selExchangeTo">
        @foreach (var x in Model)
        {
            <option>@x.Name</option>
        }
    </select>
</div>
Market Rate:<label id="lblResult">1</label>

<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="row" style="margin:0px;padding:0px;">
                <div class="col-md-5" style="font-size:20px;">
                    Search: <input type="text" style="width:80%; display:inline;margin:0px;padding:0px;" class="form-control" id="tbSearch">
                </div>
            </div>
            <div class="row">
                <table class="table table-striped">
                    <tbody id="tbMoneyChanger">
                        <tr id="trMoneyChanger">
                            <td>{{Name}}<br />
                                {{Location}}</td>
                            <td>{{Rate}}</td>
                            <td><button type="button" class="btn btn-default" id="btnDetails">View Details</button></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<iframe width="600" height="450" frameborder="0" style="border:0" src="https://www.google.com/maps/embed/v1/place?q=760898&key=AIzaSyDORpCcy-EEX3CVLnhMK0Pi2l5v0r56KkY" allowfullscreen></iframe>