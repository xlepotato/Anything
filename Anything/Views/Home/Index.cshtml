@model List<Currency>
@{
    Layout = "/Views/Shared/HeaderLogoOnly.cshtml";
}


<div class="container">
    <div class="row" id="outerContainer">
        @*currency conversion section*@

        <div class="col-md-2"></div>
        <div class="row col-md-8">
            <!--Left Container-->
            <div class="row">
                <div class="currencyInfoContainer form-group col-xs-4 col-md-4" id="leftContainer">
                    <div class="drawBorder">
                        <input class="currencyInputTF" id="tbExchangeFrom" type="number" min="0.00" max="9999" value="1.00">
                        <select class="form-control exchangeDropdown btn dropdown-toggle" id="selExchangeFrom">
                            @foreach (var x in Model)
                            {
                                <option>@x.Name</option>
                            }
                        </select>
                    </div>                
                </div>
                 @*@foreach (var x in Model)
                {
                     <h5><img src="@x.Flag" /></h5>
                    <h5>@x.Name</h5>
                }*@
                <!--Mid Container-->
                <div class="currencyInfoContainer form-group col-md-4" id="midContainer">
                    <img src="~/Assets/Images/exchangeicon.jpg" id="exchangeIcon" />
                </div>
                <!--Right Container-->
                <div class="currencyInfoContainer form-group col-md-4" id="rightContainer" ;">
                    <div class="drawBorder">
                        <input class="currencyInputTF" id="tbExchangeTo" type="number" min="0.00" max="9999" value="1.00">
                        <select class="form-control exchangeDropdown" id="selExchangeTo">
                            @foreach (var x in Model)
                            {
                                <option>@x.Name</option>
                            }
                        </select>
                    </div>
                </div>
            </div>
            <div class="col-md-12">
                <div class="putCenter" id="MarketRateDiv">Market Rate: <label id="lblResult">1.00</label></div>
            </div>
            <div class="col-md-12"> <div class="putCenter"><button type="button" class="btn btn-primary btn-lg" id="btnViewMoneyChangers">View Money Changers</button></div></div>
        </div>
        <div class="col-md-2"></div>
    </div>
</div> @*end container*@


<!--Display and Filter Section-->
<div class="container">
    <div class="row" id="outerContainer">

        <!--Filter: Search Money Changers-->
        <div class="row">
            <div class="col-xs-2 col-md-2 col-lg-2"></div>
            <div class="col-xs-8 col-md-8 col-lg-8">
                <div class="row" style="margin:0px; padding:0px;">
                    <div class="col-xs-2 col-md-2 col-lg-2"></div>
                    <div class="col-xs-7 col-md-7 col-lg-7" style="font-size:20px; padding-top:50px; padding-bottom:50px;">
                        <label class=" col-md-2 col-lg-2">Search:</label>
                        <input type="text" class="form-control homeSearch col-md-5 col-lg-5" id="tbSearch">
                    </div>
                    <div class="col-xs-3 col-md-3 col-lg-3"></div>
                </div>
            </div>
            <div class="col-xs-2 col-md-2 col-lg-2"></div>
        </div>

        <!--Display Money Changers-->
        <div class="row">
            <div class="col-xs-8 col-md-8">
                <div class="row">
                    <table class="table table-striped table-hover">
                        <tbody id="tbMoneyChanger">
                            <tr id="trMoneyChanger">
                                <td>
                                    <strong>{{Name}}</strong><br />
                                    {{Location}}
                                </td>
                                <td>{{Rate}}</td>
                                <td><button type="button" class="btn btn-default" id="btnDetails">View Details</button></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
 </div> @*end container*@

